<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
   <h2>
   <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %><%= link_to " <i class='far fa-trash-alt'></i>".html_safe, task_path(task), method: :delete %>
  </h2>
  <% end %>
  <h3 class="btn btn-danger"><%= link_to "+ Create new task", new_task_path %></h3>
</div>
